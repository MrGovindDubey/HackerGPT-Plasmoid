<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0 http://www.kde.org/standards/kcfg/1.0/kcfg.xsd">
    <kcfgfile name="bard"/>

    <group name="General">
        <entry name="sendOnEnter" type="Bool">
            <default>false</default>
        </entry>
          <entry name="matchTheme" type="Bool">
            <default>true</default>
        </entry>
          <entry name="allowClipboardAccess" type="Bool">
            <default>true</default>
        </entry>
        <entry name="focusInterval" type="Number">
            <default>0</default>
        </entry>
          <entry name="icon" type="String">
            <label>The path of the icon used in the compact representation (e.g. on a small panel).</label>
            <default>assets/logo.svg</default>
        </entry>
        <entry name="debugConsole" type="Bool">
            <default>false</default>
        </entry>
        <entry name="maxReloadTime" type="Number">
            <default>600</default>
        </entry>
    </group>
</kcfg>

